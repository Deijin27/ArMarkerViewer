<reactiveui:ReactiveUserControl x:Class="ArMarkerViewer.Controls.PokemonListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:TypeArguments="vm:PokemonListItemViewModel"
             xmlns:vm="clr-namespace:ArMarkerViewer.ViewModels"
             xmlns:reactiveui="http://reactiveui.net"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Image x:Name="PokemonIcon" VerticalAlignment="Center" Height="32" Width="32" Margin="0,0,10,0"/>
        <TextBlock x:Name="PokemonName" VerticalAlignment="Center"/>
    </StackPanel>
</reactiveui:ReactiveUserControl>
